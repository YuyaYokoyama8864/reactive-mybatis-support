<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pro.chenggang.project.reactive.mybatis.support.r2dbc.execution.query.simple.SimpleQueryMapper">

  <resultMap id="Dept" type="pro.chenggang.project.reactive.mybatis.support.common.entity.Dept">
    <id column="dept_no" jdbcType="BIGINT" property="deptNo" />
    <result column="dept_name" jdbcType="VARCHAR" property="deptName" />
    <result column="location" jdbcType="VARCHAR" property="location" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
  </resultMap>

  <select id="countAll" resultType="java.lang.Long">
    SELECT COUNT(*) FROM dept
  </select>

  <select id="selectOne" resultType="pro.chenggang.project.reactive.mybatis.support.common.entity.Dept">
    SELECT * FROM dept ORDER BY dept_no LIMIT 1
  </select>

  <select id="selectByDeptNo" resultType="pro.chenggang.project.reactive.mybatis.support.common.entity.Dept">
    SELECT * FROM dept WHERE dept_no = #{deptNo}
  </select>

  <select id="selectByDeptNoWithResultMap" resultMap="Dept">
    SELECT * FROM dept WHERE dept_no = #{deptNo}
  </select>

  <resultMap id="DeptFromConstruct" type="pro.chenggang.project.reactive.mybatis.support.common.entity.Dept">
    <constructor>
      <idArg column="dept_no" jdbcType="BIGINT" name="deptNo" javaType="java.lang.Long" />
      <arg column="dept_name" jdbcType="VARCHAR" name="deptName" javaType="java.lang.String" />
      <arg column="location" jdbcType="VARCHAR" name="location" javaType="java.lang.String" />
      <arg column="create_time" jdbcType="TIMESTAMP" name="createTime" javaType="java.time.LocalDateTime"/>
    </constructor>
  </resultMap>

  <select id="selectByDeptNoWithConstructMap" resultMap="DeptFromConstruct">
    SELECT * FROM dept WHERE dept_no = #{deptNo}
  </select>


  <select id="selectDeptWithEmpList" resultMap="pro.chenggang.project.reactive.mybatis.support.common.mapper.DeptMapper.DeptWithEmpList">
    SELECT dept.*,
           <include refid="pro.chenggang.project.reactive.mybatis.support.common.mapper.EmpMapper.columnNameWithTable" />
    FROM dept
        LEFT JOIN emp
            ON dept.dept_no = emp.dept_no
    WHERE dept.dept_no = #{deptNo}
  </select>

  <select id="selectEmpWithDept" resultMap="pro.chenggang.project.reactive.mybatis.support.common.mapper.EmpMapper.EmpWithDept">
    SELECT emp.*,
           <include refid="pro.chenggang.project.reactive.mybatis.support.common.mapper.DeptMapper.columnNameWithTable" />
    FROM emp
           LEFT JOIN dept
                     ON emp.dept_no = dept.dept_no
    WHERE emp.emp_no = #{empNo}
  </select>

</mapper>